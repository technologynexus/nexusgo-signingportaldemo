@page
@model SigningPortalDemo.Pages.AdvancedModel
@{
    ViewData["Title"] = "Advanced";
}

@{var authMethods = new List<SelectListItem>
{
new SelectListItem { Text = "Personal Mobile", Value="PM" },
new SelectListItem { Text = "Swedish BankID", Value="SE_BANKID" }
};
}
<h3>Create new request</h3>
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="NewRequest.Name" class="control-label"></label>
                <input asp-for="NewRequest.Name" type="text" class="form-control" />
                <span asp-validation-for="NewRequest.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewRequest.UploadPdf" class="control-label"></label>
                <input asp-for="NewRequest.UploadPdf" type="file" class="form-control" style="height:auto" />
                <span asp-validation-for="NewRequest.UploadPdf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewRequest.Signer" class="control-label"></label>
                <input asp-for="NewRequest.Signer" type="text" class="form-control" />
                <span asp-validation-for="NewRequest.Signer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewRequest.OnBehalfOf" class="control-label"></label>
                <input asp-for="NewRequest.OnBehalfOf" type="text" class="form-control" />
                <span asp-validation-for="NewRequest.OnBehalfOf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewRequest.AuthenticationMethod" class="control-label"></label>
                @Html.DropDownListFor(model => model.NewRequest.AuthenticationMethod, authMethods, new { @class = "form-control" })
            </div>
            <input type="submit" value="Create" class="btn btn-default" />
        </form>
    </div>
</div>
