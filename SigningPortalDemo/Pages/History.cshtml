@page
@model SigningPortalDemo.Pages.HistoryModel
@{
    ViewData["Title"] = "History";
}

<h2>History</h2>

<h3>Request</h3>
<table class="table">
    @*Markup removed for brevity.*@
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SignRequest[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignRequest[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignRequest[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignRequest[0].State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SignRequest)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAsString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @if (item.ContainsDocuments())
                    {
                        <a href="/View/@item.Id">View</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<form action="/History" method="get">
    <button name="refreshall" type="submit" value="Refresh">Refresh</button>
</form>

